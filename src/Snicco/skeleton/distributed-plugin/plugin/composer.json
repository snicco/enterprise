{
    "name": "vendor_slug/plugin",
    "description": "The official VENDOR_TITLE WordPress plugin",
    "autoload": {
        "psr-4": {
            "VENDOR_NAMESPACE\\": "src/VENDOR_NAMESPACE"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "VENDOR_NAMESPACE\\Tests\\": [
                "tests/",
                "tests/_support"
            ]
        }
    },
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/snicco/application-layer-bundle"
        },
        {
            "type": "vcs",
            "url": "https://github.com/snicco/better-wp-cli-bundle"
        },
        {
            "type": "vcs",
            "url": "https://github.com/snicco/asset"
        }
    ],
    "require": {
        "php": "^7.4|^8.0",
        "nyholm/psr7": "^1.5.0",
        "ramsey/uuid": "^4.2",
        "snicco/application-layer-bundle": "dev-master",
        "snicco/asset": "dev-master",
        "snicco/better-wp-cli-bundle": "dev-master",
        "snicco/better-wp-hooks": "^1.2.1",
        "snicco/better-wp-hooks-bundle": "^1.2.1",
        "snicco/better-wpdb-bundle": "^1.2.1",
        "snicco/event-dispatcher": "^1.2.1",
        "snicco/http-routing": "^1.2.1",
        "snicco/http-routing-bundle": "^1.2.1",
        "snicco/kernel": "^1.2.1",
        "snicco/method-override-middleware": "^1.2.1",
        "snicco/pimple-bridge": "^1.2.1",
        "snicco/psr7-error-handler": "^1.2.1",
        "snicco/templating": "^1.2.1",
        "snicco/templating-bundle": "^1.2.1",
        "snicco/wp-nonce-middleware": "^1.2.1",
        "sniccowp/php-scoper-wordpress-excludes": "^5.9",
        "webmozart/assert": "^1.10.0"
    },
    "require-dev": {
        "codeception/codeception": "4.2",
        "codeception/module-cli": "^1.0",
        "codeception/module-db": "^1.0",
        "codeception/module-webdriver": "^1.0",
        "humbug/php-scoper": "^0.17.2",
        "lucatume/wp-browser": "3.1.6",
        "php-stubs/wordpress-stubs": "^5.9.3",
        "snicco/debug-bundle": "^1.2.0",
        "snicco/testing-bundle": "^1.2.0",
        "symplify/easy-coding-standard": "10.1.2",
        "vimeo/psalm": "4.22.0",
        "wp-cli/wp-cli-bundle": "^2.6"
    },
    "scripts": {
        "make-pot": "sh bin/translate.sh",
        "psalm": "vendor/bin/psalm",
        "psalm:clear-cache": [
            "vendor/bin/psalm --clear-cache",
            "vendor/bin/psalm --clear-global-cache"
        ],
        "test": [
            "@test:unit",
            "@test:acceptance",
            "@test:integration",
            "@test:cli",
            "@test:browser"
        ],
        "test:unit": [
            "vendor/bin/codecept run unit"
        ],
        "test:integration": [
            "vendor/bin/codecept run integration"
        ],
        "test:acceptance": [
            "vendor/bin/codecept run acceptance"
        ],
        "test:browser": [
            "vendor/bin/codecept run browser --steps"
        ],
        "test:cli": [
            "vendor/bin/codecept run cli --steps"
        ],
        "test:build": [
            "vendor/bin/codecept build"
        ],
        "test:core": [
            "@test:unit",
            "@test:acceptance"
        ],
        "lint": [
            "vendor/bin/ecs check"
        ],
        "lint:fix": [
            "vendor/bin/ecs --fix"
        ]
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {}
        }
    }
}
